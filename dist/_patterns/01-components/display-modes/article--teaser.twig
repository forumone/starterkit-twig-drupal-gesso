<article class="node node--type-article node--display-mode-image-teaser" role="article">
  <div class="l-slat">
    <div class="l-slat__media">
      <a href="{{ url }}">{% include "base-thumbnail-image" %}</a>
    </div>
    <div class="l-slat__content">
      <h2 class="node__title"><a href="{{ url }}">{{ title }}</a></h2>
      <div class="node__date">{% include "base-medium-date" %}</div>
      <div class="node__author">
        <span itemprop="author" itemtype="http://schema.org/Person">by
          <a itemprop="url" rel="author" href="{{ url }}">
            <span itemprop="name">{{ author }}</span>
          </a>
        </span>
      </div>
      <div class="node__summary">
        {{ summary | raw }}
        <a class="more-link" href="{{ url }}">Learn more &raquo;</a>
      </div>
      <div class="node__tags"><a href="{{ url }}">Tag 1</a>, <a href="{{ url }}">Tag 2</a></div>
    </div>
  </div>
</article>
