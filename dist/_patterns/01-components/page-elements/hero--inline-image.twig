<div class="hero hero--inline-image">
  <picture>
    <source srcset="http://lorempixel.com/1600/800/nature/" media="(min-width: 1024px)" type="image/jpeg">
    <source srcset="http://lorempixel.com/1200/600/nature/" media="(min-width: 760px)" type="image/jpeg">
    <source srcset="http://lorempixel.com/800/400/nature/" type="image/jpeg">
    <img srcset="http://lorempixel.com/1600/800/nature" alt="test">
  </picture>
  <div class="hero__content">
    <h1 class="hero__title">{{ hero.title|default("Hero Title") }}</h1>
    <h3 class="hero__subtitle">{{ hero.subtitle|default("Hero Subtitle") }}</h3>
    <div class="hero__text">{{ hero.summary|default("<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>")|raw }}</div>
    <div class="hero__call-to-action">
      <a href="#" class="button">{{ hero.buttontext|default("Hero Button") }}</a>
    </div>
  </div>
</div>
