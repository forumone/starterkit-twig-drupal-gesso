{%
  set classes = [
    'hero',
    customClass ? customClass,
    useInlineImage ? 'hero--inline-image',
    hasOverlay ? 'hero--overlay',
  ]|join(' ')|trim
%}

<div class="{{ classes }}"{% if not useInlineImage %} style="background-image: url({{ image.large }});"{% endif %}>
  {% if useInlineImage %}
    <picture class="hero__picture">
      <source srcset="{{ image.large }}" media="(min-width: 1024px)" type="image/jpeg">
      <source srcset="{{ image.medium }}" media="(min-width: 760px)" type="image/jpeg">
      <source srcset="{{ image.small }}" type="image/jpeg">
      <img srcset="{{ image.large }}" alt="Hero Image Alt Text">
    </picture>
  {% endif %}
  <div class="hero__content">
    {% if title %}
      <h1 class="hero__title">{{ title }}</h1>
    {% endif %}
    {% if subtitle %}
      <h3 class="hero__subtitle">{{ subtitle }}</h3>
    {% endif %}
    {% if summary %}
      <div class="hero__text">{{ summary|raw }}</div>
    {% endif %}
    {% if button %}
      <div class="hero__call-to-action">
        <a href="#" class="button">{{ button }}</a>
      </div>
    {% endif %}
  </div>
</div>
