<article class="teaser teaser--media-object" role="article">
    <div class="teaser__media">
        <a href="{{ url }}">{% include "base-thumbnail-image" %}</a>
    </div>
    <div class="teaser__content">
        <h3 class="teaser__title"><a href="{{ url }}">{{ title }}</a></h3>
        <div class="teaser__meta">
            <span itemprop="author" itemtype="http://schema.org/Person">
              by <a itemprop="url" class="byline teaser__byline" rel="author" href="{{ url }}">
                    <span itemprop="name">{{ author }}</span>
                </a>
            </span>
            <time class="pubdate" datetime="{{ timestamp }}">{% include "base-medium-date" %}</time>
            <a class="comment-count" href="{{ url }}">
                <span>{{ comments }}</span>Comments</a>
        </div>
        <div class="teaser__summary">
          {{ summary | raw }}
        </div>
        <a class="teaser__more-link" href="#"><span>Learn more about {{ title }}</span></a>
        <div class="teaser__tags"><a href="{{ url }}">Tag 1</a>, <a href="{{url }}">Tag 2</a></div>
    </div>
</article>
